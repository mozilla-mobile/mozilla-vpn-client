<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <!-- Fallback for Android 8-11 (API 26-30) -->
        <item name="android:windowBackground">@drawable/splash_background_animated</item>
        
        <!-- Modern Android 12+ Splash Screen API (API 31+) -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/vpnlogo-drop_animation</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>
